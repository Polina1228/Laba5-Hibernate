<?xml version="1.0" encoding="utf-8"?><!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="student.hibernate.bsuir.Student" table="hibernate_students">
        <meta attribute="class-description">This class
            contains developer's details.
        </meta>
        <id name="id" type="int" column="id">
            <generator class="native"/>
        </id>
        <property name="name" column="name" type="string"/>
        <property name="surname" column="surname" type="string"/>
        <property name="middleName" column="middleName" type="string"/>
        <property name="age" column="age" type="int"/>
        <property name="groupNum" column="groupNum" type="int"/>
    </class>
</hibernate-mapping>